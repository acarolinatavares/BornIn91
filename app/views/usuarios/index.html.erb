# encoding: utf-8
<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">

      <h2 class="section-heading" align="center">Usu√°rios</h2>
      <br>
      <table class="table table-striped" align="center">
        <tr>
          <th>Nome</th>
          <th>Email</th>
          <th></th>
        </tr>

        <% @usuarios.each do |usuario| %>
            <tr>
              <td><%= usuario.name %></td>
              <td><%= usuario.email %></td>
              <td>
                <%= link_to 'Exibir', usuario_path(usuario), :class => "btn btn-xs btn-info "%>
                <% if can? :manage, current_user%>
                    <%= link_to 'Editar', edit_usuario_path(usuario), :class => "btn btn-xs btn-primary "%>
                <%end%>
              </td>
        <% end %>
        </tr>
      </table>
      <%= will_paginate @usuarios, renderer: BootstrapPagination::Rails %>
    </div>
  </div>
</div>

