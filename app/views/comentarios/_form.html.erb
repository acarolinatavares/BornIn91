<%= form_for(@comentario) do |f| %>
    <%= f.hidden_field :usuario_id, :value => current_user ? current_user.id : nil %>
    <%= f.hidden_field :post_id%>

    <div class="form-group">
      <%= f.text_area :corpo, :class=>"form-control"%>
    </div>

    <div class="form-actions" align="center">
      <%= f.submit "Comentar", :class=>"btn btn-success" %>
    </div>
<% end %>




