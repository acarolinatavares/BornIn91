<div class="container">
  <div class="row">
    <div class="col-lg-8 col-lg-offset-2 col-md-10 col-md-offset-1">
      <% @posts.each do |post| %>

          <div class="post-preview">
            <h2 class="post-title">
              <%= link_to post.titulo, post %>
            </h2>
            <p class="post-meta">Postado por <%= post.autor%> em <%= post.created_at%></p>
          </div>
          <hr>

      <%end%>
    </div>
  </div>
</div>